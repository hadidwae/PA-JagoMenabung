<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".activity.LupaPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="ScrollViewSize">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lupa_passwordTex"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/endColor" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="@string/ket_lupa_pass"
            android:textSize="15sp"
            android:textColor="@color/abumuda4" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/ti_email_lupa"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:helperTextTextColor="@color/red"
            app:boxStrokeColor="@color/endColor"
            app:hintTextColor="@color/endColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_email"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:textColor="@color/endColor"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/second"
            android:fontFamily="@font/gilroysemibold"
            android:paddingHorizontal="10dp"
            android:text="@string/kirim" />

    </LinearLayout>

</ScrollView>